#!/bin/bash
# jtest - Fast Java testing using Maven wrapper
# Runs Java tests instantly with optimized Maven settings

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored messages
print_info() {
    echo -e "${GREEN}[jtest]${NC} $1"
}

print_error() {
    echo -e "${RED}[jtest]${NC} $1" >&2
}

print_warning() {
    echo -e "${YELLOW}[jtest]${NC} $1"
}

# Check if Maven wrapper exists
if [ ! -f "$SCRIPT_DIR/mvnw" ]; then
    print_error "Maven wrapper not found. Please run jconfigure first."
    exit 1
fi

# Default Maven goals
MAVEN_GOALS="test"
MAVEN_OPTS=""

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --compile)
            MAVEN_GOALS="compile test"
            shift
            ;;
        --integration)
            MAVEN_GOALS="verify"
            shift
            ;;
        --single)
            MAVEN_OPTS="$MAVEN_OPTS -Dtest=$2"
            shift 2
            ;;
        --method)
            MAVEN_OPTS="$MAVEN_OPTS -Dtest=$2"
            shift 2
            ;;
        --offline)
            MAVEN_OPTS="$MAVEN_OPTS -o"
            shift
            ;;
        --debug)
            MAVEN_OPTS="$MAVEN_OPTS -X"
            shift
            ;;
        --quiet)
            MAVEN_OPTS="$MAVEN_OPTS -q"
            shift
            ;;
        --parallel)
            MAVEN_OPTS="$MAVEN_OPTS -Dparallel=all -DthreadCount=${2:-4}"
            shift
            if [[ $1 =~ ^[0-9]+$ ]]; then
                shift
            fi
            ;;
        -h|--help)
            echo "Usage: jtest [OPTIONS]"
            echo ""
            echo "Options:"
            echo "  --compile         Compile before testing"
            echo "  --integration     Run integration tests (verify phase)"
            echo "  --single CLASS    Run a single test class"
            echo "  --method CLASS    Run specific test method"
            echo "  --parallel [N]    Run tests in parallel (default 4 threads)"
            echo "  --offline         Work offline"
            echo "  --debug           Enable debug output"
            echo "  --quiet           Quiet output"
            echo "  -h, --help        Display this help message"
            exit 0
            ;;
        *)
            # Pass unknown arguments to Maven
            MAVEN_OPTS="$MAVEN_OPTS $1"
            shift
            ;;
    esac
done

print_info "Starting tests..."

# Execute Maven tests
"$SCRIPT_DIR/mvnw" $MAVEN_OPTS $MAVEN_GOALS

if [ $? -eq 0 ]; then
    print_info "Tests completed successfully!"
else
    print_error "Tests failed!"
    exit 1
fi
