#!/bin/bash
# jcompile-dispatch - Dispatches Maven compile tasks for fast Java compilation
# This tool intelligently dispatches compilation tasks across multiple processes

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored messages
print_info() {
    echo -e "${GREEN}[jcompile-dispatch]${NC} $1"
}

print_error() {
    echo -e "${RED}[jcompile-dispatch]${NC} $1" >&2
}

print_warning() {
    echo -e "${YELLOW}[jcompile-dispatch]${NC} $1"
}

# Check if Maven wrapper exists
if [ ! -f "$SCRIPT_DIR/mvnw" ]; then
    print_error "Maven wrapper not found. Please run jconfigure first."
    exit 1
fi

# Default behavior: clean and compile
MAVEN_GOALS="clean compile"
MAVEN_OPTS="-T 1C" # Use 1 thread per CPU core for parallel builds

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --parallel)
            MAVEN_OPTS="-T ${2:-1C}"
            shift 2
            ;;
        --goals)
            MAVEN_GOALS="$2"
            shift 2
            ;;
        --threads)
            MAVEN_OPTS="-T $2"
            shift 2
            ;;
        -h|--help)
            echo "Usage: jcompile-dispatch [OPTIONS]"
            echo ""
            echo "Options:"
            echo "  --parallel [N]    Use parallel compilation (default: 1 thread per core)"
            echo "  --threads N       Use exactly N threads for compilation"
            echo "  --goals GOALS     Custom Maven goals (default: clean compile)"
            echo "  -h, --help        Display this help message"
            exit 0
            ;;
        *)
            print_error "Unknown option: $1"
            exit 1
            ;;
    esac
done

print_info "Starting dispatch compilation with ${MAVEN_OPTS}"
print_info "Maven goals: ${MAVEN_GOALS}"

# Execute Maven with parallel compilation
"$SCRIPT_DIR/mvnw" $MAVEN_OPTS $MAVEN_GOALS

if [ $? -eq 0 ]; then
    print_info "Dispatch compilation completed successfully!"
else
    print_error "Dispatch compilation failed!"
    exit 1
fi
